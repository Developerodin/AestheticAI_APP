<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#1179C4"
                android:endColor="#13D7A8"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Center the logo on the splash screen -->
    <item
        android:gravity="center">
        <bitmap
            android:src="@drawable/bootsplash_logo"
            android:tileMode="disabled"/>
    </item>
</layer-list>
